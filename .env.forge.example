# ============================================================
# Laravel Production (.env) - For DigitalOcean + Forge
# Copy to .env and fill in your values
# ============================================================

APP_NAME="Khatawat ERP"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://api.khatawat.com

APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_IQ

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# --- Database (MySQL on same Droplet or Managed DB) ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=khatawat
DB_USERNAME=forge
DB_PASSWORD=your_db_password

# --- Session & Cache ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

CACHE_STORE=file
QUEUE_CONNECTION=database

# --- Redis (optional, for better performance) ---
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# --- Filesystem ---
FILESYSTEM_DISK=local

# --- Mail ---
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@khatawat.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- CORS: Add your storefront domains ---
# Laravel reads these from config/cors.php
# Update config/cors.php allowed_origins for *.khatawat.com
